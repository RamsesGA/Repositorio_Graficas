#version 400


/////////////////////
// INPUT VARIABLES //
/////////////////////
in vec2 TexCoord;


//////////////////////
// OUTPUT VARIABLES //
//////////////////////
layout(location = 0) out vec4 Bright;


///////////////////////
// UNIFORM VARIABLES //
///////////////////////
uniform sampler2D Lum;


////////////////////////////////////////////////////////////////////////////////
// Shader Functions
////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
void main()
{
	Bright =  max(textureLod(Lum, TexCoord, 0) - 0.3f, vec4(0.0f));
}